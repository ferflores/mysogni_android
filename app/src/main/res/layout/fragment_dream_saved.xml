<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    tools:context="com.mysogni.mysogni.fragments.DreamSavedFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dream_saved"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:padding="30dp"/>

    <Button
        android:text="@string/go_to_dream_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gotoDreamList"
        android:padding="20dp"
        android:layout_margin="30dp"/>

    <Button
        android:text="@string/go_to_new_dream"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gotoNewDream"
        android:padding="20dp"
        android:layout_margin="30dp"/>

</LinearLayout>
